{% extends 'base.html.twig' %}

{% block title %}{{ proyecto.titulo }} - Portafolio Benjamin{% endblock %}

{% block body %}
<style>
/* 1. VARIABLES GLOBALES (MISMA PALETA QUE TU TEMPLATE) */
:root {
    --color-primario: #2563eb;
    --color-primario-hover: #1d4ed8;
    --color-secundario: #64748b;
    --color-fondo: #f8fafc;
    --color-superficie: #ffffff;
    --color-texto: #1e293b;
    --color-texto-claro: #64748b;
    --color-borde: #e2e8f0;
    --sombra-suave: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --sombra-fuerte-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --radio-borde: 12px;
    --fuente-principal: 'Inter', sans-serif;
    --fuente-titulos: 'Poppins', sans-serif;
    --color-blanco: #ffffff;
}

/* 2. RESET Y BASE */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--fuente-principal);
    background-color: var(--color-fondo);
    color: var(--color-texto);
    line-height: 1.6;
}

.wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* 4. CONTENIDO PRINCIPAL */
.detalle-proyecto {
    padding: 7rem 0 4rem 0;
}

.header-detalle {
    text-align: center;
    margin-bottom: 3rem;
}

.volver-proyectos {
    display: inline-block;
    margin-bottom: 1.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-secundario);
    color: var(--color-blanco);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.volver-proyectos:hover {
    background: #475569;
    color: var(--color-blanco);
    transform: translateY(-2px);
}

.titulo-proyecto {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #1a1919;
    text-shadow: 2px 4px 4px rgba(61, 57, 57, 0.3);
}

/* 5. GALER√çA PRINCIPAL */
.galeria-principal {
    margin-bottom: 3rem;
}

.galeria-container {
    position: relative;
    border-radius: var(--radio-borde);
    overflow: hidden;
    box-shadow: var(--sombra-suave);
    background: var(--color-fondo);
}

.galeria-principal-img {
    width: 100%;
    height: 500px;
    object-fit: contain;
    display: block;
    background: var(--color-fondo);
}

.controles-galeria {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.9);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    backdrop-filter: blur(10px);
}

.btn-galeria {
    background: var(--color-primario);
    color: var(--color-blanco);
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    transition: all 0.3s ease;
}

.btn-galeria:hover {
    background: var(--color-primario-hover);
    transform: scale(1.1);
}

.contador-imagenes {
    display: flex;
    align-items: center;
    color: var(--color-texto);
    font-weight: 600;
    font-size: 0.9rem;
}

/* 6. MINIATURAS */
.miniaturas-container {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding: 1rem 0;
    margin-bottom: 3rem;
}

.miniatura {
    flex: 0 0 auto;
    width: 120px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    opacity: 0.7;
}

.miniatura:hover,
.miniatura.activa {
    opacity: 1;
    border-color: var(--color-primario);
    transform: scale(1.05);
}

.miniatura img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* 7. INFORMACI√ìN DEL PROYECTO */
.info-proyecto {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
}

.descripcion-proyecto h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--color-texto);
    text-align: left;
}

.descripcion-texto {
    color: var(--color-texto-claro);
    line-height: 1.7;
    font-size: 1.1rem;
    margin-bottom: 2rem;
}

.detalles-tecnicos {
    background: var(--color-superficie);
    padding: 2rem;
    border-radius: var(--radio-borde);
    box-shadow: var(--sombra-suave);
    border: 1px solid var(--color-borde);
}

.detalles-tecnicos h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-texto);
    text-align: left;
}

/* 8. TECNOLOG√çAS */
.tecnologias-lista {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-bottom: 2rem;
}

.tecnologia-tag {
    padding: 8px 16px;
    background-color: var(--color-primario);
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-blanco);
}

/* 9. BOTONES DE ACCI√ìN */
.botones-accion {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-primario);
    color: var(--color-blanco);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn:hover {
    background-color: var(--color-primario-hover);
    transform: translateY(-2px);
}

.btn-codigo {
    background: var(--color-primario);
}

.btn-volver {
    background: var(--color-secundario);
}

.btn-volver:hover {
    background: #475569;
}

.btn-admin {
    background: #f59e0b;
}

.btn-admin:hover {
    background: #d97706;
}

/* 10. FOOTER */
footer {
    background: var(--color-texto);
    color: var(--color-blanco);
    text-align: center;
    padding: 2rem 1rem;
    margin-top: 4rem;
}

footer span {
    font-weight: bold;
}

/* 11. RESPONSIVE */
@media (max-width: 968px) {
    .info-proyecto {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .galeria-principal-img {
        height: 400px;
    }
}

@media (max-width: 768px) {
    .barra-superior ul {
        gap: 1.5rem;
    }
    
    .titulo-proyecto {
        font-size: 2.5rem;
    }
    
    .galeria-principal-img {
        height: 300px;
    }
    
    .controles-galeria {
        bottom: 10px;
        padding: 0.4rem 0.8rem;
    }
    
    .btn-galeria {
        width: 35px;
        height: 35px;
        font-size: 1rem;
    }
    
    .miniaturas-container {
        gap: 0.5rem;
    }
    
    .miniatura {
        width: 100px;
        height: 70px;
    }
    
    .botones-accion {
        flex-direction: column;
        align-items: stretch;
    }
    
    .btn {
        text-align: center;
    }
}

@media (max-width: 480px) {
    .barra-superior ul {
        gap: 1rem;
        flex-wrap: wrap;
    }
    
    .titulo-proyecto {
        font-size: 2rem;
    }
    
    .galeria-principal-img {
        height: 250px;
    }
    
    .descripcion-proyecto h2 {
        font-size: 1.5rem;
    }
}
</style>

<div class="wrapper">

    <main class="container">
        <section class="detalle-proyecto">
            <!-- HEADER -->
            <div class="header-detalle">
                <a href="{{ path('app_proyecto_index') }}" class="volver-proyectos">‚Üê Volver a Proyectos</a>
                <h1 class="titulo-proyecto">{{ proyecto.titulo }}</h1>
            </div>

            <!-- GALER√çA PRINCIPAL -->
            <div class="galeria-principal">
                <div class="galeria-container">
                    <img id="imagen-principal" class="galeria-principal-img" 
                         src="{{ proyecto.imagens|length > 0 ? asset('uploads/proyectos/' ~ proyecto.imagens.first().archivo) : '' }}" 
                         alt="{{ proyecto.titulo }}"
                         loading="eager">
                    
                    {% if proyecto.imagens|length > 1 %}
                    <div class="controles-galeria">
                        <button class="btn-galeria" onclick="cambiarImagen(-1)">‚Äπ</button>
                        <div class="contador-imagenes">
                            <span id="contador-actual">1</span> / <span id="contador-total">{{ proyecto.imagens|length }}</span>
                        </div>
                        <button class="btn-galeria" onclick="cambiarImagen(1)">‚Ä∫</button>
                    </div>
                    {% endif %}
                </div>

                <!-- MINIATURAS -->
                {% if proyecto.imagens|length > 1 %}
                <div class="miniaturas-container">
                    {% for imagen in proyecto.imagens %}
                    <div class="miniatura {% if loop.first %}activa{% endif %}" 
                         onclick="mostrarImagen({{ loop.index0 }})"
                         data-index="{{ loop.index0 }}">
                        <img src="{{ asset('uploads/proyectos/' ~ imagen.archivo) }}" 
                             alt="Miniatura {{ loop.index }} de {{ proyecto.titulo }}">
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>

            <!-- INFORMACI√ìN DEL PROYECTO -->
            <div class="info-proyecto">
                <div class="descripcion-proyecto">
                    <h2>Descripci√≥n del Proyecto</h2>
                    <p class="descripcion-texto">{{ proyecto.descripcion }}</p>
                    
                    <div class="botones-accion">
                        <a href="{{ proyecto.enlace }}" class="btn btn-codigo" target="_blank" rel="noopener noreferrer">
                            üíª Ver C√≥digo Fuente
                        </a>
                        <a href="{{ path('app_proyecto_index') }}" class="btn btn-volver">
                            üìÇ Ver Todos los Proyectos
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_proyecto_edit', {'id': proyecto.id}) }}" class="btn btn-admin">
                                ‚úèÔ∏è Editar Proyecto
                            </a>
                        {% endif %}
                    </div>
                </div>

                <div class="detalles-tecnicos">
                    <h3>Tecnolog√≠as Utilizadas</h3>
                    <div class="tecnologias-lista">
                        {% for tag in proyecto.tecnologias|split(',') %}
                            <span class="tecnologia-tag">{{ tag|trim }}</span>
                        {% endfor %}
                    </div>
                    
                    <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--color-borde);">
                        <h4 style="font-size: 1.1rem; margin-bottom: 1rem; color: var(--color-texto);">Detalles del Proyecto</h4>
                        <div style="color: var(--color-texto-claro); font-size: 0.9rem;">
                            <p><strong>ID:</strong> {{ proyecto.id }}</p>
                            <p><strong>Total de im√°genes:</strong> {{ proyecto.imagens|length }}</p>
                            {% if is_granted('ROLE_ADMIN') %}
                                <p><strong>Acciones:</strong> 
                                    <a href="{{ path('app_proyecto_edit', {'id': proyecto.id}) }}" style="color: var(--color-primario);">Editar</a>
                                </p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <div class="container">
            Portafolio de <span> ¬© Benjamin Arancivia</span>
        </div>
    </footer>
</div>

<script>
let imagenes = [
    {% for imagen in proyecto.imagens %}
        "{{ asset('uploads/proyectos/' ~ imagen.archivo) }}"{% if not loop.last %},{% endif %}
    {% endfor %}
];

let imagenActual = 0;

function mostrarImagen(index) {
    imagenActual = index;
    const imagenPrincipal = document.getElementById('imagen-principal');
    const contadorActual = document.getElementById('contador-actual');
    const miniaturas = document.querySelectorAll('.miniatura');
    
    imagenPrincipal.src = imagenes[index];
    contadorActual.textContent = index + 1;
    
    // Actualizar miniaturas activas
    miniaturas.forEach((miniatura, i) => {
        if (i === index) {
            miniatura.classList.add('activa');
        } else {
            miniatura.classList.remove('activa');
        }
    });
}

function cambiarImagen(direccion) {
    let nuevoIndex = imagenActual + direccion;
    
    if (nuevoIndex < 0) {
        nuevoIndex = imagenes.length - 1;
    } else if (nuevoIndex >= imagenes.length) {
        nuevoIndex = 0;
    }
    
    mostrarImagen(nuevoIndex);
}

// Navegaci√≥n con teclado
document.addEventListener('keydown', function(e) {
    if (e.key === 'ArrowLeft') {
        cambiarImagen(-1);
    } else if (e.key === 'ArrowRight') {
        cambiarImagen(1);
    }
});

// Inicializar contador total
document.getElementById('contador-total').textContent = imagenes.length;
</script>
{% endblock %}