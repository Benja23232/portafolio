{% extends 'base.html.twig' %}

{% block title %}Todos mis Proyectos - Portafolio Benjamin{% endblock %}

{% block body %}
<style>
/* 1. VARIABLES GLOBALES (MISMA PALETA QUE TU TEMPLATE) */
:root {
    --color-primario: #2563eb;         
    --color-primario-hover: #1d4ed8;  
    --color-secundario: #64748b;   
    --color-fondo: #f8fafc;          
    --color-superficie: #ffffff;         
    --color-texto: #1e293b;             
    --color-texto-claro: #64748b;
    --color-borde: #e2e8f0;             
    --sombra-suave: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --sombra-fuerte-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --radio-borde: 12px;
    --fuente-principal: 'Inter', sans-serif;
    --fuente-titulos: 'Poppins', sans-serif;
    --color-blanco: #ffffff;
    --color-success: #10b981;            
    --color-error: #ef4444;              
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    height: 100%;
    font-family: var(--fuente-principal);
    background-color: var(--color-fondo);
    color: var(--color-texto);
    line-height: 1.6;
}

h1, h2, h3, h4, h5, h6 {
    font-family: var(--fuente-titulos);
    font-weight: 600;
}

h1 {
    font-size: 3rem; /
    margin-bottom: 1rem;
    color: #1a1919;
    text-shadow: 2px 4px 4px rgba(61, 57, 57, 0.3);
    text-align: center;
}

h2 {
    font-size: 2.50rem;
    margin-bottom: 2rem;
    color: #1a1919;
    text-shadow: 2px 4px 4px rgba(61, 57, 57, 0.3);
    text-align: center;
}

h3 {
    font-size: 2rem; 
    margin-bottom: 1.5rem;
    text-align: left;
    padding-top: 0;
    color: var(--color-texto);
}

p {
    margin-bottom: 1rem;
    color: var(--color-texto-claro);
    font-size: 1.1rem; 
    line-height: 1.7;
}

ul {
    list-style: none;
}

a {
    text-decoration: none;
    color: var(--color-primario);
    transition: color 0.3s ease;
}

a:hover {
    color: var(--color-primario-hover);
}

img {
    max-width: 100%;
    height: auto;
}

.wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.container {
    width: 95%; 
    max-width: 1400px; 
    margin-left: auto;
    margin-right: auto;
    color: black;
}



/* SECCIONES  */
.seccion {
    padding: 7rem 2rem 5rem 2rem; 
}

.seccion-tarjetas {
    padding-top: 7rem;
    padding-bottom: 5rem;
}

/* .HEADER DE LA P√ÅGINA DE TODOS LOS PROYECTOS */
.portafolio-header {
    text-align: center;
    padding: 3rem 0 4rem 0; 
}

.volver-inicio {
    display: inline-block;
    margin-bottom: 2rem;
    padding: 1rem 2rem; 
    background: var(--color-secundario);
    color: var(--color-blanco);
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.volver-inicio:hover {
    background: #475569;
    color: var(--color-blanco);
    transform: translateY(-3px);
}

/* GRID DE PROYECTOS */
.proyectos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr)); /* M√ÅS ANCHO */
    gap: 3rem; 
    margin-bottom: 4rem;
}

.proyecto-card {
    background: var(--color-superficie);
    border-radius: var(--radio-borde);
    box-shadow: var(--sombra-suave);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 2px solid var(--color-borde); 
}

.proyecto-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 0 25px 8px rgba(33, 32, 32, 0.3);
}

/* GALER√çA DE IM√ÅGENES */
.gallery-container {
    position: relative;
    height: 400px; /
    overflow: hidden;
    background-color: var(--color-fondo);
}

.gallery-scroll {
    display: flex;
    height: 100%;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
}

.gallery-scroll::-webkit-scrollbar {
    display: none;
}

.gallery-item {
    flex: 0 0 100%;
    scroll-snap-align: start;
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: contain; 
    display: block;
    transition: transform 0.4s ease;
    padding: 25px; 
}

.proyecto-card:hover .gallery-item img {
    transform: scale(1.05); 
    filter: brightness(1.1) contrast(1.1);
}

.gallery-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(37, 99, 235, 0.9);
    color: var(--color-blanco);
    border: none;
    width: 60px; /* M√ÅS GRANDE */
    height: 60px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem; 
    transition: all 0.3s ease;
    z-index: 10;
    opacity: 0;
}

.proyecto-card:hover .gallery-nav {
    opacity: 1;
}

.gallery-nav:hover {
    background: var(--color-primario);
    transform: translateY(-50%) scale(1.15);
}

.gallery-prev {
    left: 20px;
}

.gallery-next {
    right: 20px;
}

/* CONTENIDO DEL PROYECTO  */
.proyecto-content {
    padding: 2.5rem; 
}

.proyecto-content h3 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    text-align: left;
    padding-top: 0;
}

.proyecto-descripcion {
    color: var(--color-texto-claro);
    margin-bottom: 2rem;
    line-height: 1.7;
    font-size: 1.1rem;
}

/* TECNOLOG√çAS */
.tecnologias {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem; 
    margin: 2rem 0;
}

.tecnologia-tag {
    padding: 8px 16px; 
    background-color: var(--color-primario);
    border: 1px solid var(--color-primario);
    border-radius: 25px;
    font-size: 1rem; 
    font-weight: 500;
    color: var(--color-blanco);
}

/* BOTONES */
.btn {
    display: inline-block;
    padding: 1rem 2rem; 
    background: var(--color-primario);
    color: var(--color-blanco);
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    font-size: 1.1rem;
}

.btn:hover {
    background-color: var(--color-primario-hover);
    color: var(--color-blanco);
    transform: translateY(-3px);
}

.botones-proyecto {
    display: flex;
    gap: 1.5rem; 
    margin-top: 2rem;
    flex-wrap: wrap;
}

.btn-codigo {
    background: var(--color-primario);
}

.btn-admin {
    background: var(--color-secundario);
    font-size: 1rem;
    padding: 0.8rem 1.5rem;
}

.btn-admin:hover {
    background: #475569;
}

/* FOOTER */
footer {
    background: var(--color-texto);
    color: black;
    text-align: center;
    padding: 3rem 1rem; /* M√ÅS ESPACIADO */
    font-size: 1rem;
    margin-top: auto;
}

footer span {
    font-weight: bold;
    color: var(--color-blanco);
    font-size: 1.1rem;
}

/* ESTADOS ESPECIALES */
.sin-proyectos {
    text-align: center;
    padding: 5rem 2rem; 
    color: var(--color-texto-claro);
    grid-column: 1 / -1;
}

.sin-proyectos p {
    font-size: 1.3rem;
}

.admin-links {
    text-align: center;
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 2px solid var(--color-borde);
}

.contador-proyectos {
    text-align: center;
    color: var(--color-texto-claro);
    margin-bottom: 3rem;
    font-size: 1.3rem;
}

/* 13. RESPONSIVE */
@media (max-width: 1024px) {
    .proyectos-grid {
        grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
        gap: 2.5rem;
    }
    
    .gallery-container {
        height: 350px;
    }
}

@media (max-width: 768px) {
    .proyectos-grid {
        grid-template-columns: 1fr;
        gap: 2.5rem;
    }
    
    .barra-superior ul {
        gap: 2rem;
    }
    
    h1 {
        font-size: 2.5rem;
    }
    
    .gallery-container {
        height: 300px;
    }
    
    .gallery-nav {
        width: 50px;
        height: 50px;
        font-size: 1.5rem;
        opacity: 1;
    }
    
    .proyecto-content {
        padding: 2rem;
    }
    
    .proyecto-content h3 {
        font-size: 1.7rem;
    }
    
    .container {
        width: 92%;
    }
}

@media (max-width: 480px) {
    .barra-superior ul {
        gap: 1.2rem;
        flex-wrap: wrap;
    }
    
    .barra-superior li a {
        font-size: 1rem;
    }
    
    .proyectos-grid {
        grid-template-columns: 1fr;
    }
    
    .gallery-container {
        height: 250px;
    }
    
    .gallery-item img {
        padding: 15px;
    }
    
    h1 {
        font-size: 2.2rem;
    }
    
    .proyecto-content {
        padding: 1.5rem;
    }
    
    .btn {
        padding: 0.9rem 1.7rem;
        font-size: 1rem;
    }
}
</style>

<div class="wrapper">
   <main class="container">
      <section class="seccion-tarjetas">
         <div class="portafolio-header">
            <a href="{{ path('app_inicio') }}" class="volver-inicio">‚Üê Volver al Inicio</a>
            <h1>Todos mis Proyectos</h1>
            <p style="text-align: center; color: var(--color-texto-claro); max-width: 700px; margin: 0 auto; font-size: 1.2rem;">
                Explora todos mis trabajos de desarrollo web y aplicaciones
            </p>
            
            {% if proyectos is not empty %}
            <div class="contador-proyectos">
                Mostrando <strong>{{ proyectos|length }}</strong> proyecto{{ proyectos|length != 1 ? 's' : '' }}
            </div>
            {% endif %}
         </div>
         <div class="proyectos-grid">
            {% if proyectos is empty %}
               <div class="sin-proyectos">
                  <p style="font-size: 1.3rem; margin-bottom: 1.5rem;">A√∫n no hay proyectos cargados.</p>
                  {% if is_granted('ROLE_ADMIN') %}
                     <a href="{{ path('app_proyecto_new') }}" class="btn" style="font-size: 1.2rem; padding: 1.2rem 2.5rem;">
                        ‚ûï Crear primer proyecto
                     </a>
                  {% endif %}
               </div>
            {% else %}
               {% for proyecto in proyectos %}
                  <article class="proyecto-card">
                     <div class="gallery-container">
                        <div class="gallery-scroll" id="gallery-{{ proyecto.id }}" tabindex="0" role="region" aria-roledescription="carousel">
                           {% for imagen in proyecto.imagens %}
                              <div class="gallery-item">
                                <a href="{{ path('app_proyecto_show', {'id': proyecto.id}) }}">
                                  <img src="{{ asset('uploads/proyectos/' ~ proyecto.imagens[1].archivo) }}" 
                                       alt="{{ proyecto.titulo }}"
                                       loading="lazy">
                                </a>
                              </div>
                           {% endfor %}
                        </div>
                        
                        {% if proyecto.imagens|length > 1 %}
                           <button class="gallery-nav gallery-prev" 
                                   onclick="scrollGallery('{{ proyecto.id }}', -1)"
                                   aria-label="Imagen anterior">
                              ‚Äπ
                           </button>
                           <button class="gallery-nav gallery-next" 
                                   onclick="scrollGallery('{{ proyecto.id }}', 1)"
                                   aria-label="Imagen siguiente">
                              ‚Ä∫
                           </button>
                        {% endif %}
                     </div>
                     <div class="proyecto-content">
                        <h3>{{ proyecto.titulo }}</h3>
                        <p class="proyecto-descripcion">{{ proyecto.descripcion }}</p>
                        <div class="tecnologias">
                           {% for tag in proyecto.tecnologias|split(',') %}
                              <span class="tecnologia-tag">{{ tag|trim }}</span>
                           {% endfor %}
                        </div>
                        <div class="botones-proyecto">
                           <a href="{{ proyecto.enlace }}" class="btn btn-codigo" target="_blank" rel="noopener noreferrer">
                              üíª Ver C√≥digo
                           </a>
                           
                           {% if is_granted('ROLE_ADMIN') %}
                              <a href="{{ path('app_proyecto_edit', {'id': proyecto.id}) }}" class="btn btn-admin">
                                 ‚úèÔ∏è Editar
                              </a>
                           {% endif %}
                        </div>
                     </div>
                  </article>
               {% endfor %}
            {% endif %}
         </div>
         {% if is_granted('ROLE_ADMIN') and proyectos is not empty %}
            <div class="admin-links">
               <a href="{{ path('app_proyecto_new') }}" class="btn" style="font-size: 1.2rem; padding: 1.2rem 2.5rem;">
                  ‚ûï Agregar Nuevo Proyecto
               </a>
            </div>
         {% endif %}
      </section>
   </main>

   <!-- FOOTER -->
   <footer>
      <div class="container">
         Portafolio de <span> ¬© Benjamin Arancivia</span>
      </div>
   </footer>
</div>

<script>
function scrollGallery(projectId, direction) {
    const gallery = document.getElementById(`gallery-${projectId}`);
    const scrollAmount = gallery.offsetWidth * direction;
    gallery.scrollBy({ left: scrollAmount, behavior: 'smooth' });
}

document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.gallery-scroll').forEach(gallery => {
        gallery.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft') {
                e.preventDefault();
                const projectId = this.id.replace('gallery-', '');
                scrollGallery(projectId, -1);
            } else if (e.key === 'ArrowRight') {
                e.preventDefault();
                const projectId = this.id.replace('gallery-', '');
                scrollGallery(projectId, 1);
            }
        });
        
        gallery.setAttribute('tabindex', '0');
    });
    
    document.querySelectorAll('.gallery-container').forEach(container => {
        const gallery = container.querySelector('.gallery-scroll');
        const prevBtn = container.querySelector('.gallery-prev');
        const nextBtn = container.querySelector('.gallery-next');
        
        if (gallery && prevBtn && nextBtn) {
            const updateNavButtons = () => {
                const hasOverflow = gallery.scrollWidth > gallery.clientWidth;
                if (prevBtn) prevBtn.style.display = hasOverflow ? 'flex' : 'none';
                if (nextBtn) nextBtn.style.display = hasOverflow ? 'flex' : 'none';
            };
            
            updateNavButtons();
            window.addEventListener('resize', updateNavButtons);
        }
    });
});
</script>
{% endblock %}